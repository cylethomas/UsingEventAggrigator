<UserControl x:Class="UsingEventAggregator.MessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UsingEventAggregator"
             mc:Ignorable="d" 
             xmlns:prism="http://prismlibrary.com/"
              prism:ViewModelLocator.AutoWireViewModel="True" Padding="25"
             >
    <StackPanel>
        <TextBlock Text="{Binding Message}" Margin="5" />
        <Button Command="{Binding SendMessageCommand}" Content="Send Message" Margin="5" />
    </StackPanel>
</UserControl>
